#!/bin/bash

err() {
	echo $1
	usage
	exit
}

usage() {
	cat <<EOF

Usage: xdg-open [file]

It opens a file according to the extension
To setup the extension, create ~/.config/mimi/mime.conf
e.g.
	default:urxvt -e ranger
	pdf:mupdf
mimi :)
EOF
}
CONFIG="$HOME/.config/mimi/mime.conf"

[[ -f "$CONFIG" ]] || err "No configuration file found."
filename="$@"
[[ -f "$filename" ]] || err "The file does not exist."

ext=${filename##*.}
path=${filename%/*}
program=$(grep "^$ext:" "$CONFIG" | cut -d : -f 2)

if [[ $program == "" ]]; then
	filemanager=$(grep "^default:" "$CONFIG" | cut -d : -f 2)
	$filemanager "$path"
else
	$program "$filename"
fi
